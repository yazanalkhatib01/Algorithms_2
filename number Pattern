#include <iostream>
#include <string>
using namespace std;

//number Pattern
//Problem #13

int Reading_Positive_Number(string message) {

	int num = 0;

	do
	{
		cout << message << endl;
		cin >> num;

	} while (num <= 0);

	return num;
}

void Prent_Number_Pattern(int number) {


	for ( int i = 1; i <= number; i++)
	{
	cout << endl;

	for (int x = 1; x <= i; x++)
	{
		cout << i;
	}

	}
}

int main() {

	Prent_Number_Pattern(Reading_Positive_Number("Enter number: "));

	return 0;
}
